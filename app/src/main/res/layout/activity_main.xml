<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5D033"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/panini"
        android:layout_width="0dp"
        android:layout_height="145dp"
        android:layout_gravity="start"
        android:background="@drawable/sfondohome"
        android:drawableRight="@drawable/hamburger"
        android:text="  PANINI"
        android:textAlignment="textStart"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="273dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/dolce"
        android:layout_width="411dp"
        android:layout_height="155dp"
        android:layout_gravity="start"
        android:background="@drawable/sfondohome"
        android:drawableRight="@drawable/dolce"
        android:text="  DOLCI"
        android:textAlignment="textStart"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="418dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bibite"
        android:layout_width="0dp"
        android:layout_height="155dp"
        android:layout_gravity="start"
        android:background="@drawable/sfondohome"
        android:drawableRight="@drawable/bibite"
        android:text="  BIBITE"
        android:textAlignment="textStart"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="573dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/fritti"
        android:layout_width="411dp"
        android:layout_height="140dp"
        android:layout_gravity="start"
        android:background="@drawable/sfondohome"
        android:drawableRight="@drawable/patatine"
        android:text="  FRITTI"
        android:textAlignment="textStart"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="133dp"
        tools:ignore="MissingConstraints"/>

    <Button
        android:id="@+id/ordine"
        android:layout_width="100dp"
        android:layout_height="115dp"
        android:background="@drawable/myorder"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="127dp"
        android:layout_height="117dp"
        android:text="MENU MAXI"
        android:textAlignment="center"
        android:textColor="#0a0a0a"
        android:textSize="38dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/pagamento"
        android:layout_width="127dp"
        android:layout_height="115dp"
        android:background="@drawable/pagamento"
        android:onClick="metodoPagamento"
        tools:layout_editor_absoluteX="272dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints"/>


</androidx.constraintlayout.widget.ConstraintLayout>